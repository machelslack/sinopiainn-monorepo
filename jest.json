{
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "testMatch": ["**/__tests__/**/*.test.*"],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
        "@sinopiainn/(.*)$": "<rootDir>/packages/$1"
      }
  }